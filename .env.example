# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret - CHANGE THIS IN PRODUCTION
JWT_SECRET=your-secret-key-change-in-production

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google Maps API
GOOGLE_MAPS_API_KEY=AIzaSyBcMQKcB_teVcngitgd_qgwdECFuUoEcb0

# Email Configuration (SMTP)
# Leave empty to use Ethereal (Mock) in development
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Sentry Error Tracking (Optional)
# Get your DSN from https://sentry.io
SENTRY_DSN=

# Cloudinary Configuration (Required for image uploads)
# Get your credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Stripe Configuration (Required for payments)
# Get your credentials from https://dashboard.stripe.com/apikeys
# Use sk_test_ and pk_test_ for development, sk_live_ and pk_live_ for production
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
