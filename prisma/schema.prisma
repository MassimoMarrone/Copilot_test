// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  username              String?   @unique
  originalEmail         String?   // Preserved when account is deleted
  password              String
  userType              String    // "client", "provider", "admin"
  isClient              Boolean   @default(true)
  isProvider            Boolean   @default(false)
  isAdmin               Boolean   @default(false)
  adminLevel            String?   // "super" | "standard" - null if not admin
  isBlocked             Boolean   @default(false)
  isDeleted             Boolean   @default(false)
  deletedAt             DateTime?
  acceptedTerms         Boolean   @default(false)
  acceptedProviderTerms Boolean   @default(false)
  isVerified            Boolean   @default(false)
  verificationToken     String?
  verificationTokenExpires DateTime?
  stripeAccountId       String?
  googleId              String?
  createdAt             DateTime  @default(now())
  
  // Profile information
  displayName           String?
  firstName             String?
  lastName              String?
  phone                 String?
  address               String?
  city                  String?
  postalCode            String?
  bio                   String?
  avatarUrl             String?

  // ===== PROVIDER ONBOARDING FIELDS =====
  // Status
  onboardingStatus      String?   // "pending", "documents_uploaded", "under_review", "approved", "rejected"
  onboardingStep        Int       @default(0)  // Current step in onboarding (0-4)
  onboardingCompletedAt DateTime?
  onboardingRejectedAt  DateTime?
  onboardingRejectionReason String?
  
  // Personal Data (Step 1)
  dateOfBirth           DateTime?
  fiscalCode            String?   // Codice Fiscale italiano
  vatNumber             String?   // Partita IVA (optional)
  
  // Documents (Step 2)
  idDocumentFrontUrl    String?   // Foto documento fronte
  idDocumentBackUrl     String?   // Foto documento retro
  idDocumentType        String?   // "carta_identita", "patente", "passaporto"
  idDocumentNumber      String?   // Numero documento
  idDocumentExpiry      DateTime? // Scadenza documento
  
  // Payment Info (Step 3)
  iban                  String?
  bankAccountHolder     String?   // Intestatario conto
  
  // Work Info (Step 4)
  workingZones          String?   // JSON array of zones/CAPs
  yearsOfExperience     Int?
  hasOwnEquipment       Boolean   @default(false)
  insuranceNumber       String?   // Numero polizza RC (optional)
  insuranceExpiry       DateTime? // Scadenza polizza
  // ===== END PROVIDER ONBOARDING =====

  // Relations
  services              Service[]
  bookingsAsClient      Booking[] @relation("ClientBookings")
  bookingsAsProvider    Booking[] @relation("ProviderBookings")
  reviewsGiven          Review[]  @relation("ClientReviews")
  reviewsReceived       Review[]  @relation("ProviderReviews")
  sentMessages          ChatMessage[]
  notifications         Notification[]
  consentRecords        ConsentRecord[]
}

model Service {
  id            String    @id @default(uuid())
  providerId    String
  provider      User      @relation(fields: [providerId], references: [id])
  providerEmail String
  title         String
  description   String
  category      String?
  price         Float
  priceType     String    @default("fixed") // "fixed", "hourly", "per_sqm"
  productsUsed  String?   // JSON string
  address       String?
  latitude      Float?
  longitude     Float?
  imageUrl      String?
  createdAt     DateTime  @default(now())
  averageRating Float     @default(0)
  reviewCount   Int       @default(0)
  availability  String?   // JSON string
  
  // Scheduling settings
  workingHoursStart String  @default("08:00")  // Provider's work start time
  workingHoursEnd   String  @default("18:00")  // Provider's work end time
  slotDurationMinutes Int   @default(30)       // Minimum booking slot duration
  extraServices     String?   // JSON string [{name: string, price: number}]
  coverageRadiusKm  Int     @default(20)       // Maximum distance provider will travel (km)

  bookings      Booking[]
  reviews       Review[]
}

model Booking {
  id              String    @id
  serviceId       String
  service         Service   @relation(fields: [serviceId], references: [id])
  clientId        String
  client          User      @relation("ClientBookings", fields: [clientId], references: [id])
  clientEmail     String
  providerId      String
  provider        User      @relation("ProviderBookings", fields: [providerId], references: [id])
  providerEmail   String
  serviceTitle    String
  amount          Float
  date            DateTime
  status          String
  paymentStatus   String
  paymentIntentId String?
  paymentAuthorizedAt DateTime? // When payment was authorized (for delayed capture)
  photoProof      String?   // Legacy single photo (deprecated)
  photoProofs     String?   // JSON array of photo URLs (1-10 photos)
  createdAt       DateTime  @default(now())
  completedAt     DateTime?
  clientPhone     String?
  preferredTime   String?
  notes           String?
  address         String?
  
  // Smart booking fields
  squareMetersRange   String?   // "0-50", "50-80", "80-120", "120+"
  windowsCount        Int?      // Number of windows
  estimatedDuration   Int?      // Estimated duration in minutes
  startTime           String?   // Booking start time "HH:MM"
  endTime             String?   // Booking end time "HH:MM"
  selectedExtras      String?   // JSON string [{name: string, price: number}]
  clientProducts      String?   // JSON array of product IDs client has at home
  
  // Client confirmation flow (escrow release)
  awaitingClientConfirmation  Boolean   @default(false)
  confirmationDeadline        DateTime? // 24h after provider completes
  clientConfirmedAt           DateTime?
  
  // Dispute handling
  disputeStatus     String?   // "pending", "resolved_refund", "resolved_payment", null
  disputeReason     String?
  disputeOpenedAt   DateTime?
  disputeResolvedAt DateTime?
  disputeResolvedBy String?   // Admin user ID who resolved
  disputeNotes      String?   // Admin notes on resolution

  messages        ChatMessage[]
  review          Review?

  @@index([providerId, date])
  @@index([clientId, date])
}

model Review {
  id            String    @id @default(uuid())
  bookingId     String    @unique
  booking       Booking   @relation(fields: [bookingId], references: [id])
  serviceId     String
  service       Service   @relation(fields: [serviceId], references: [id])
  providerId    String
  provider      User      @relation("ProviderReviews", fields: [providerId], references: [id])
  clientId      String
  client        User      @relation("ClientReviews", fields: [clientId], references: [id])
  rating        Int
  ratingDetails String?   // JSON string
  comment       String
  createdAt     DateTime  @default(now())
  providerReply String?
  providerReplyCreatedAt DateTime?
  helpfulCount  Int       @default(0)
  helpfulVoters String?   // JSON string
}

model ChatMessage {
  id          String    @id @default(uuid())
  bookingId   String
  booking     Booking   @relation(fields: [bookingId], references: [id])
  senderId    String
  sender      User      @relation(fields: [senderId], references: [id])
  senderEmail String
  senderType  String
  message     String
  read        Boolean   @default(false)
  createdAt   DateTime  @default(now())

  @@index([bookingId, createdAt])
  @@index([senderId, read])
}

model Notification {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  title     String
  message   String
  type      String
  read      Boolean   @default(false)
  createdAt DateTime  @default(now())
  link      String?
}

// ===== CONSENT RECORDS =====
// Traccia tutte le accettazioni di termini/contratti per validità legale
model ConsentRecord {
  id              String    @id @default(uuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id])
  
  // Tipo di consenso
  consentType     String    // "terms_of_service", "privacy_policy", "provider_contract", "cookie_policy"
  
  // Versione del documento accettato
  documentVersion String    // es. "1.0", "2025-12-18"
  documentHash    String?   // Hash SHA256 del documento per prova immutabilità
  
  // Dettagli accettazione
  acceptedAt      DateTime  @default(now())
  ipAddress       String?   // IP da cui ha accettato
  userAgent       String?   // Browser/dispositivo
  
  // Metodo di accettazione
  acceptanceMethod String   // "checkbox", "button_click", "signature"
  
  // Stato (per revoca GDPR)
  isActive        Boolean   @default(true)
  revokedAt       DateTime?
  revokedReason   String?
  
  @@index([userId])
  @@index([consentType])
}
